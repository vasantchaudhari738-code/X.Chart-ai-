<body class="dark">

<div class="flex h-screen">

<!-- ========== SIDEBAR ========== -->
<div class="w-72 bg-slate-900 border-r border-slate-700 p-4 hidden md:block">
  <div class="flex justify-between items-center mb-2">
    <h2 class="font-bold">Chats</h2>
    <button id="newChatBtn" class="btn border border-cyan-400 text-cyan-400 px-2 py-1 rounded-lg">+ New</button>
  </div>

  <button id="newFolderBtn" class="btn w-full mb-2 border border-purple-400 text-purple-400 px-2 py-1 rounded-lg">
    + New Folder
  </button>

  <input id="chatSearch" placeholder="Search chats..." 
    class="w-full bg-slate-800 border border-slate-700 rounded-lg p-2 mb-2"/>

  <div id="folderArea" class="space-y-2 overflow-y-auto h-[70vh]"></div>

  <div class="mt-2 space-y-2">
    <button id="openSettings" class="btn w-full border border-purple-400 text-purple-400 px-2 py-2 rounded-lg">Settings</button>
    <button id="toggleTheme" class="btn w-full border border-yellow-400 text-yellow-400 px-2 py-2 rounded-lg">Toggle Theme</button>
  </div>
</div>

<!-- ========== MAIN CHAT ========== -->
<div class="flex-1 flex flex-col">

<header class="bg-slate-800 p-4 border-b border-slate-700 flex justify-between items-center">
  <h1 class="text-xl font-bold">Universal AI Chat v4</h1>
  <div class="flex gap-2">
    <button id="statsBtn" class="btn border border-blue-400 text-blue-400 px-2 py-1 rounded-lg">Stats</button>
    <button id="summaryBtn" class="btn border border-green-400 text-green-400 px-2 py-1 rounded-lg">Auto-Summary</button>
    <button id="shareBtn" class="btn border border-cyan-400 text-cyan-400 px-2 py-1 rounded-lg">Share</button>
  </div>
</header>

<div id="chatContainer" class="flex-1 overflow-y-auto p-4 space-y-4"></div>

<div class="p-4 bg-slate-900 border-t border-slate-700">
  <div id="dropZone" class="border border-dashed border-slate-700 p-2 mb-2 text-center text-sm rounded-lg">
    Drag image here or click üì∑
    <input id="imageInput" type="file" accept="image/*" class="hidden"/>
  </div>

  <div class="flex gap-2 items-center">
    <textarea id="userInput"
      class="flex-1 bg-slate-800 border border-slate-700 rounded-lg p-2 resize-none focus:outline-none"
      rows="1" placeholder="Type your message..."></textarea>

    <button id="voiceReplyBtn" class="btn border border-blue-400 text-blue-400 px-2 py-2 rounded-lg">üîä</button>

    <button id="sendBtn"
      class="btn border border-green-400 text-green-400 px-4 py-2 rounded-lg">
      Send
    </button>
  </div>
</div>
