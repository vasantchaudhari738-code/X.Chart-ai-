<!-- ========== SCRIPT (END OF BODY) ========== -->
<script>
const chatContainer = document.getElementById("chatContainer");
const folderArea = document.getElementById("folderArea");
const newChatBtn = document.getElementById("newChatBtn");
const newFolderBtn = document.getElementById("newFolderBtn");
const chatSearch = document.getElementById("chatSearch");
const userInput = document.getElementById("userInput");
const sendBtn = document.getElementById("sendBtn");
const imageInput = document.getElementById("imageInput");
const dropZone = document.getElementById("dropZone");
const statsBtn = document.getElementById("statsBtn");
const summaryBtn = document.getElementById("summaryBtn");
const shareBtn = document.getElementById("shareBtn");
const voiceReplyBtn = document.getElementById("voiceReplyBtn");
const toggleTheme = document.getElementById("toggleTheme");

const settingsModal = document.getElementById("settingsModal");
const openSettings = document.getElementById("openSettings");
const closeSettings = document.getElementById("closeSettings");
const saveSettings = document.getElementById("saveSettings");
const apiKeyInput = document.getElementById("apiKeyInput");
const modelInput = document.getElementById("modelInput");

let currentChatId = null;

/* ===== THEME ===== */
toggleTheme.onclick = ()=>{
  const now = document.body.classList.contains("dark")?"light":"dark";
  document.body.className = now;
  localStorage.setItem("theme",now);
};
document.body.className = localStorage.getItem("theme")||"dark";

/* ===== STORAGE ===== */
function getData(){
  return JSON.parse(localStorage.getItem("ai_v4")||JSON.stringify({folders:[],chats:[]}));
}
function saveData(d){ localStorage.setItem("ai_v4",JSON.stringify(d)); }

/* ===== NEW CHAT ===== */
newChatBtn.onclick = ()=>{
  const d = getData();
  const id = Date.now().toString();
  d.chats.unshift({id,title:"New Chat",messages:[],folder:null});
  saveData(d);
  currentChatId = id;
  renderFolders();
  chatContainer.innerHTML="";
};

/* ===== NEW FOLDER ===== */
newFolderBtn.onclick = ()=>{
  const name = prompt("Folder name?");
  if(!name) return;
  const d = getData();
  d.folders.push({id:Date.now().toString(),name});
  saveData(d);
  renderFolders();
};

/* ===== RENDER FOLDERS + CHATS ===== */
function renderFolders(){
  const d = getData();
  folderArea.innerHTML="";

  d.folders.forEach(f=>{
    const fdiv = document.createElement("div");
    fdiv.className="folder p-2 rounded-lg";
    fdiv.innerHTML = `<b>üìÅ ${f.name}</b>`;
    fdiv.ondragover = e=>{e.preventDefault(); fdiv.classList.add("drag-over");};
    fdiv.ondragleave = ()=>fdiv.classList.remove("drag-over");
    fdiv.ondrop = e=>{
      const cid = e.dataTransfer.getData("chat");
      const chat = d.chats.find(c=>c.id===cid);
      if(chat){ chat.folder=f.id; saveData(d); renderFolders(); }
      fdiv.classList.remove("drag-over");
    };
    folderArea.appendChild(fdiv);

    d.chats.filter(c=>c.folder===f.id).forEach(c=>{
      const b = chatBtn(c);
      fdiv.appendChild(b);
    });
  });

  d.chats.filter(c=>!c.folder).forEach(c=>{
    folderArea.appendChild(chatBtn(c));
  });
}

function chatBtn(chat){
  const b = document.createElement("button");
  b.textContent = chat.title;
  b.className="w-full text-left px-2 py-1 mt-1 rounded-lg border btn";
  b.draggable = true;
  b.ondragstart = e=>e.dataTransfer.setData("chat",chat.id);
  b.onclick = ()=>loadChat(chat.id);
  return b;
}

/* ===== LOAD CHAT ===== */
function loadChat(id){
  const d = getData();
  const chat = d.chats.find(c=>c.id===id);
  if(!chat) return;
  currentChatId = id;
  chatContainer.innerHTML="";
  chat.messages.forEach(m=>addMessage(m.role,m.content,false));
}

/* ===== ADD MESSAGE ===== */
function addMessage(role,text,save=true){
  const div = document.createElement("div");
  div.className="chat-bubble max-w-[80%] p-3 rounded-xl "+
    (role==="user"?"bg-cyan-600 ml-auto":"bg-slate-800");
  div.innerHTML = marked.parse(text);
  chatContainer.appendChild(div);
  chatContainer.scrollTop = chatContainer.scrollHeight;

  if(save && currentChatId){
    const d = getData();
    const chat = d.chats.find(c=>c.id===currentChatId);
    chat.messages.push({role,content:text});
    if(chat.messages.length===1 && role==="user"){
      chat.title = text.substring(0,25);
    }
    saveData(d);
    renderFolders();
  }
}

/* ===== DRAG DROP IMAGE ===== */
dropZone.onclick = ()=>imageInput.click();
dropZone.ondragover = e=>{e.preventDefault(); dropZone.classList.add("drag-over");};
dropZone.ondragleave = ()=>dropZone.classList.remove("drag-over");
dropZone.ondrop = e=>{
  e.preventDefault();
  imageInput.files = e.dataTransfer.files;
  dropZone.classList.remove("drag-over");
};

/* ===== SEND MESSAGE ===== */
sendBtn.onclick = async ()=>{
  const text = userInput.value.trim();
  const apiKey = localStorage.getItem("openrouter_api_key");
  const model = localStorage.getItem("ai_model")||modelInput.value;

  if(!apiKey){ alert("Set API Key in Settings"); return; }
  if(!currentChatId) newChatBtn.onclick();

  addMessage("user", text);

  const placeholder = document.createElement("div");
  placeholder.className="chat-bubble max-w-[80%] p-3 rounded-xl bg-slate-800";
  chatContainer.appendChild(placeholder);

  try{
    const res = await fetch("https://openrouter.ai/api/v1/chat/completions",{
      method:"POST",
      headers:{
        "Authorization":`Bearer ${apiKey}`,
        "Content-Type":"application/json"
      },
      body:JSON.stringify({
        model,
        messages:[{role:"user",content:text}]
      })
    });
    const data = await res.json();
    const reply = data.choices[0].message.content;

    placeholder.remove();
    addMessage("assistant",reply);
  }catch(e){
    placeholder.remove();
    addMessage("assistant","Error connecting to AI.");
  }
  userInput.value="";
};

/* ===== CHAT STATS ===== */
statsBtn.onclick = ()=>{
  if(!currentChatId) return;
  const d = getData();
  const chat = d.chats.find(c=>c.id===currentChatId);
  const words = chat.messages.map(m=>m.content).join(" ").split(/\s+/).length;
  alert(`Messages: ${chat.messages.length}\nWords: ${words}`);
};

/* ===== AUTO SUMMARY ===== */
summaryBtn.onclick = ()=>{
  if(!currentChatId) return;
  const d = getData();
  const chat = d.chats.find(c=>c.id===currentChatId);
  const all = chat.messages.map(m=>m.content).join("\n");
  addMessage("assistant", "**Auto Summary:**\n"+all.substring(0,300)+"...");
};

/* ===== SHARE CHAT ===== */
shareBtn.onclick = ()=>{
  if(!currentChatId) return;
  const d = getData();
  const chat = d.chats.find(c=>c.id===currentChatId);
  const blob = new Blob([JSON.stringify(chat)],{type:"application/json"});
  const a = document.createElement("a");
  a.href = URL.createObjectURL(blob);
  a.download = "chat.json";
  a.click();
};

/* ===== VOICE REPLY ===== */
voiceReplyBtn.onclick = ()=>{
  const last = chatContainer.lastChild;
  if(!last) return;
  const text = last.innerText;
  const utter = new SpeechSynthesisUtterance(text);
  speechSynthesis.speak(utter);
};

/* ===== SETTINGS ===== */
openSettings.onclick = ()=>settingsModal.classList.remove("hidden");
closeSettings.onclick = ()=>settingsModal.classList.add("hidden");
saveSettings.onclick = ()=>{
  localStorage.setItem("openrouter_api_key",apiKeyInput.value);
  localStorage.setItem("ai_model",modelInput.value);
  settingsModal.classList.add("hidden");
};
apiKeyInput.value = localStorage.getItem("openrouter_api_key")||"";
modelInput.value = localStorage.getItem("ai_model")||modelInput.value;

/* INIT */
renderFolders();
</script>
</body>
  </html>
