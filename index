<!-- ========== SETTINGS MODAL ========== -->
<div id="settingsModal" class="fixed inset-0 bg-black bg-opacity-60 hidden flex items-center justify-center">
<div class="bg-slate-900 p-6 rounded-xl w-96 border border-slate-700">
  <h2 class="font-bold mb-2">Settings</h2>

  <label>OpenRouter API Key</label>
  <input id="apiKeyInput" type="password" class="w-full bg-slate-800 border p-2 mb-2"/>

  <label>Model</label>
  <input id="modelInput" value="google/gemini-2.0-flash-lite-preview-02-05"
    class="w-full bg-slate-800 border p-2 mb-2"/>

  <div class="flex justify-end gap-2">
    <button id="closeSettings" class="btn border border-red-400 text-red-400 px-2 py-1 rounded-lg">Cancel</button>
    <button id="saveSettings" class="btn border border-cyan-400 text-cyan-400 px-2 py-1 rounded-lg">Save</button>
